<div class="container">
  <div class="row">
    <div class="col-12 col-md-6 offset-md-3 mt-3">
      <%= link_to "Following #{current_user.following_counter}", following_path(current_user.username), class:"btn btn-info" %>
      <%= link_to "Followers #{current_user.followers_counter}", followers_path(current_user.username), class:"btn btn-info"  %>
      <hr>
    </div>
    <div class="col-12 col-md-6 offset-md-3">
      <%= render "layouts/messages" %>
      <h1>Recent Tweets</h1>
      <%= link_to "Tweet", new_posts_path, class: "btn btn-success" %>
      <hr>
      <br>
      <%= render @posts %>
      <br>
      <%= paginate @posts %>
    </div>
  </div>
</div>